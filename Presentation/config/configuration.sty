%%%
% figure
%%%
% \inputfigure[1.]{name}% scale, img name (also figure label)
% {Title}%
% {Caption}

\newcommand{\inputfigure}[4][1.]{%
	\def\path{#2}
	\def\figlabel{#2}
	\edef\path{img/\path.pdf}
	\begin{figure}[htbp]
		\begin{center}
			\textbf{#3}\\
			\includegraphics[scale=#1]{\path}
			\caption{#4}\label{fig:\figlabel}
		\end{center}
	\end{figure}
}

