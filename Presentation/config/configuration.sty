\newcommand{\inputsubfigure}[5][1.]{%
	\def\path{#3}
	\def\figlabel{#3}
	\edef\path{img/\path.pdf}
	\begin{subfigure}[r]{#2\linewidth}% [!htbp] % 
		\begin{center}
			\textbf{#4}\\
			\includegraphics[scale=#1]{\path}
			\caption{#5}\label{fig:\figlabel}
		\end{center}
	\end{subfigure}
}

\newcommand{\envsubfigure}[4]{%
	\def\figlabel{#1}
	\begin{figure}[htbp]
		\begin{center}
			\textbf{#2}\\
			{#4}
			\caption{#3}
			\label{fig:\figlabel}
		\end{center}
	\end{figure}
}

